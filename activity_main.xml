<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context="com.vvit.kishore.assignment_2.MainActivity">

   <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/order_coffee" android:layout_gravity="center" android:layout_marginTop="50dp" android:textSize="26sp" android:textAllCaps="true"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="30dp" android:layout_marginRight="16dp">

        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="select flavour" android:textAlignment="center" android:textSize="20sp"/>

        <Spinner android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2" android:id="@+id/idsp"/>

    </LinearLayout>



    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="16dp" android:layout_marginLeft="16dp">

        <TextView android:layout_width="0dp" android:layout_marginTop="20dp" android:layout_height="match_parent" android:layout_weight="2" android:text="@string/quantity" android:textSize="20sp" android:textAllCaps="true"/>


        <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/idmin" android:text="-"/>

        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2" android:text="0" android:id="@+id/idcq" android:textAlignment="center" android:textSize="50sp"/>

        <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/idmax" android:text="+"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">

        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="price" android:textSize="30sp" android:textAllCaps="true" android:textAlignment="center"/>

        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="0" android:textSize="30sp" android:id="@+id/idprice" android:textAllCaps="true" android:textAlignment="center"/>

    </LinearLayout>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="place order" android:id="@+id/idplace" android:layout_gravity="center"/>

</LinearLayout>
